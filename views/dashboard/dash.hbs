<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  var send = function () {
    socket.emit('display', "txt");
  }
   var receive = function (data) {
    chartUpdate(data);
    ///////////////
    
  }
  
  var chartUpdate = function (data) {
    const config = {
      type: 'bar',
      data,
      options: {
        scales: {
          x: {
            title: {
              text: "Les Blocs",
              display: true
            }
          },
          y: {
            title: {
              text: "Les Salles",
              display: true
            }
          }
        },
        plugins: {
          legend: {
            display: false,
            position: 'bottom',
            labels: {
              fontColor: "#000080",
            }
          },
          title: {
            display: true,
            text: 'Salle Par Bloc Chart'
          },


        }
      }
    };

    var myChart = new Chart(
      document.getElementById('myChart'),
      config
      
    );
    
  }
  
  socket.on('display', receive);
</script>
<center>

  
  <div class="chart-container" >
    <canvas id="myChart" style="height:70px; width:150px"></canvas>
  </div>
