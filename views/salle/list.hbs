<h3 class="text-center" style="margin-bottom: 20px; ">  Liste des Salles</h3>

<table class="table table-hover text-center">
    <thead class="thead-primary">
        <tr>
            <th>Nom</th>
            <th>Capacit√©</th>
            <th>Bloc</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.capacite}}</td>
            <td>{{this.blocName}}</td>

            <td>
                <a class="btn btn-success btn-sm" href="/salle/{{this._id}}">Modifier</a>
                <a class="btn btn-danger btn-sm" href="/salle/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');">Supprimer</a>
                <a class="btn btn-primary btn-sm" href="/salle/planing/{{this._id}}/{{this.name}}">Planing </a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
